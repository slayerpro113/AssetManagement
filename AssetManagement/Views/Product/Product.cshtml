@{
    Layout = "~/Views/Shared/_Layouts.cshtml";
}

@Html.DevExpress().GetStyleSheets(
    new StyleSheet { ExtensionSuite = ExtensionSuite.GridView }
    )
@Html.DevExpress().GetScripts(
    new Script { ExtensionSuite = ExtensionSuite.GridView }
)


<style>
    .x_title {
        margin-top: 0;
    }

    h2 {
        text-align: center;
        font-size: x-large;
    }

    .product-image {
        border-radius: 50%;
        width: 150px;
        height: 150px;
    }

    .x_content {
        display: flex;
        justify-content: center;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Products</h2>
                    <div class="clearfix"></div>
                </div>

                <div class="x_content">
                    @using (Html.BeginForm())
                    {
                        @Html.Action("GetProductByCategoryId", new { categoryId = (int)ViewBag.CategoryId });
                    }
                </div>
            </div>
        </div>
    </div>
</div>

