@using System.Drawing
@Html.DevExpress().GridView(settings => {
    settings.Name = "detailGrid_" + ViewData["AssetID"];
    settings.SettingsDetail.MasterGridName = "grid";
    settings.CallbackRouteValues = new { Controller = "Asset", Action = "ShowHistories", assetId = ViewBag.AssetID };
    settings.Width = Unit.Percentage(100);

    settings.Styles.Header.BackColor = System.Drawing.ColorTranslator.FromHtml("#009688");
    settings.Styles.Header.ForeColor = Color.White;

    settings.Columns.Add(c =>
    {
        c.FieldName = "Checkin_Date";
        c.Caption = "Checkin Date";
        c.CellStyle.HorizontalAlign = HorizontalAlign.Center;
        c.HeaderStyle.HorizontalAlign = HorizontalAlign.Center;
        c.PropertiesEdit.DisplayFormatString = "D";
    });

    settings.Columns.Add(c =>
    {
        c.FieldName = "Checkout_Date";
        c.Caption = "Checkout Date";
        c.CellStyle.HorizontalAlign = HorizontalAlign.Center;
        c.HeaderStyle.HorizontalAlign = HorizontalAlign.Center;
        c.PropertiesEdit.DisplayFormatString = "D";
    });

    settings.Columns.Add(c =>
    {
        c.FieldName = "EmployeeName";
        c.CellStyle.HorizontalAlign = HorizontalAlign.Center;
        c.HeaderStyle.HorizontalAlign = HorizontalAlign.Center;
    });

}).Bind(Model).GetHtml()



