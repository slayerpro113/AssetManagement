@model Data.Entities.Asset



<style>
    .x_panel {
        border-left: none;
        border-right: none;
        border-bottom: none;
    }

    .detail-title {
        color: white
    }

    .detail-x_title {
        background: #1AAB9C !important;
    }   

 </style>

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="">
        <div class="detail-x_title">
            <h2 class="detail-title">Asset Detail</h2>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">

            <table class="table table-bordered">
                <tbody style="text-align: center">
                <tr>
                    <td rowspan="4" style="width: 99px">
                        @Html.DevExpress().Image(settings =>
                        {
                            settings.ImageUrl = "/Image/Categories/" + @Model.AssetImage;
                            settings.Width = 99;
                            settings.Height = 120;
                            settings.ControlStyle.CssClass = "image";
                            settings.Properties.EnableClientSideAPI = true;
                        }).GetHtml()
                    </td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td colspan="3">
                        @Model.AssetName
                    </td>
                </tr>
                <tr>
                    <th>Type</th>
                    <td>
                        @Model.AssetCategory
                    </td>
                    <th>Brand</th>
                    <td>
                        @Model.AssetBrand
                    </td>
                </tr>
                <tr>
                    <th>Depreciation</th>
                    <td>
                        Nothing
                    </td>
                    <th>Depreciation</th>
                    <td>
                        Nothing
                    </td>
                </tr>
                </tbody>
            </table>

        </div>
    </div>
</div>