                            <ul class="nav side-menu">
                                <li>
                                    <a><i class="fa fa-home"></i> Home <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu">
                                        <li class="test"><a href="/user/GetAssetsDetail">My Assets</a></li>
                                        <li class="test"><a href="/user/requestform">Make Requests</a></li>
                                        <li class="test"><a href="/user/RequestsHistory">Tracking Requests</a></li>
                                    </ul>
                                </li>

                                @if (userSession.Role.RoleName == "Staff")
                                {
                                    <li>
                                        <a><i class="fa fa-edit"></i> Manage Requests <span class="fa fa-chevron-down"></span></a>
                                        <ul class="nav child_menu">
                                            <li><a href="/staff/GetPoRequestsFromUsers">Handle Requests</a></li>
                                        </ul>
                                    </li>
                                }

                                @if (userSession.Role.RoleName == "Manager")
                                {
                                    <li>
                                        <a><i class="fa fa-edit"></i> Manage Requests <span class="fa fa-chevron-down"></span></a>
                                        <ul class="nav child_menu">
                                            <li><a href="/staff/GetPoRequestsFromUsers">Handle Requests</a></li>
                                            <li><a href="/manager/GetPoRequestsFromStaff">Select Quote</a></li>
                                        </ul>
                                    </li>
                                }

                                @if (userSession.Role.RoleName == "Staff" || userSession.Role.RoleName == "Manager")
                                {
                                    <li>
                                        <a><i class="fa fa-desktop"></i> Manage Assets <span class="fa fa-chevron-down"></span></a>
                                        <ul class="nav child_menu">
                                            <li><a href="/asset/AssetsInStock">Assets In Stock</a></li>
                                            <li><a href="/asset/AssetsInUse">Assets In Use</a></li>
                                        </ul>
                                    </li>
                                }

                                @if (userSession.Role.RoleName == "Manager")
                                {
                                    <li>
                                        <a><i class="fa fa-bar-chart"></i> Reports <span class="fa fa-chevron-down"></span></a>
                                        <ul class="nav child_menu">
                                            <li><a href="/manager/GetOrders">Charts & Orders</a></li>
                                        </ul>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                    <!-- /sidebar menu -->
                </div>
            </div>

            <!-- top navigation -->
            <div class="top_nav">
                <div class="nav_menu">
                    <nav>
                        <div class="nav toggle">
                            <a id="menu_toggle"><i class="fa fa-bars"></i></a>
                        </div>

                        <ul class="nav navbar-nav navbar-right" style="width: 260px">
                            <li class="">
                                <a href="javascript:;" class="user-profile dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                    <img src="/Image/@userSession.Image" alt="">@userSession.FullName
                                    <span class="fa fa-angle-down"></span>
                                </a>
                                <ul class="dropdown-menu dropdown-usermenu pull-right">
                                    <li><a href="/Login/logout"><i class="fa fa-sign-out pull-right"></i> Log Out</a></li>
                                </ul>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
            <!-- /top navigation -->
            <!-- page content -->
            <div class="right_col" role="main">
                @RenderBody()
            </div>
            <!-- /page content -->
            <!-- footer content -->
            <footer>
                <div class="pull-right">
                    Phu Da City
                </div>
                <div class="clearfix"></div>
            </footer>
            <!-- /footer content -->
        </div>
    </div>


    <!-- jQuery -->
    <script src="/vendors/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap -->
    <script src="/vendors/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- bootstrap-progressbar -->
    <script src="/vendors/bootstrap-progressbar/bootstrap-progressbar.min.js"></script>
    <!-- Custom Theme Scripts -->
    <script src="/build/js/custom.min.js"></script>
</body>
